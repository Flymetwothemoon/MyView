<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <com.example.myview.layout
       android:layout_width="50dp"
       android:layout_marginTop="50dp"
       android:background="@android:color/holo_red_light"
       android:layout_height="50dp"/>
<com.example.myview.offsetLeftAndRightoroffsetTopAndBottom
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginTop="50dp"
    android:background="@android:color/holo_blue_light"/>
   <com.example.myview.LayoutParams
       android:layout_width="50dp"
       android:layout_marginTop="50dp"
       android:background="@android:color/holo_green_light"
       android:layout_height="50dp"/>
   <com.example.myview.anime
       android:layout_width="50dp"
       android:layout_marginTop="50dp"
       android:id="@+id/anime"
       android:background="@android:color/holo_orange_light"
       android:layout_height="50dp"/>
   <com.example.myview.scrollToAndscrollBy
       android:layout_width="50dp"
       android:layout_height="50dp"

       android:layout_marginTop="50dp"
       android:background="@android:color/primary_text_light"
       />
  <com.example.myview.scroller
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="50dp"
      android:id="@+id/scroller"
      android:background="@android:color/holo_red_dark"
      />
</LinearLayout>